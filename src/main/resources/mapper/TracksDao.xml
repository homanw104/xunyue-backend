<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="world.homans.xunyue.dao.TracksDao">
    <resultMap id="TracksMap" type="world.homans.xunyue.model.Tracks">
        <id column="id" jdbcType="VARCHAR" property="id"/>
        <result column="name" jdbcType="LONGVARCHAR" property="name"/>
        <result column="popularity" jdbcType="INTEGER" property="popularity"/>
        <result column="duration_ms" jdbcType="INTEGER" property="duration_ms"/>
        <result column="explicit" jdbcType="INTEGER" property="explicit"/>
        <result column="artists" jdbcType="LONGVARCHAR" property="artists"/>
        <result column="id_artists" jdbcType="LONGVARCHAR" property="id_artists"/>
        <result column="release_date" jdbcType="VARCHAR" property="release_date"/>
        <result column="danceability" jdbcType="DOUBLE" property="danceability"/>
        <result column="energy" jdbcType="DOUBLE" property="energy"/>
        <result column="key" jdbcType="INTEGER" property="key"/>
        <result column="loudness" jdbcType="DOUBLE" property="loudness"/>
        <result column="mode" jdbcType="INTEGER" property="mode"/>
        <result column="speechiness" jdbcType="DOUBLE" property="speechiness"/>
        <result column="acousticness" jdbcType="DOUBLE" property="acousticness"/>
        <result column="instrumentalness" jdbcType="DOUBLE" property="instrumentalness"/>
        <result column="liveness" jdbcType="DOUBLE" property="liveness"/>
        <result column="valence" jdbcType="DOUBLE" property="valence"/>
        <result column="tempo" jdbcType="DOUBLE" property="tempo"/>
        <result column="time_signature" jdbcType="INTEGER" property="time_signature"/>
    </resultMap>

    <insert id="insertTracks" parameterType="Tracks">
        INSERT INTO tracks (id, name, popularity, duration_ms, explicit, artists, id_artists, release_date, danceability,
                            energy, `key`, loudness, mode, speechiness, instrumentalness, liveness, valence, tempo, time_signature)
            Value(#{id},#{name},#{popularity},#{duration_ms},#{explicit},#{artists},#{id_artists},#{release_date},#{danceability},
                  #{energy},#{key},#{loudness},#{mode},#{speechiness},#{instrumentalness},#{liveness},#{valence},#{tempo},#{time_signature})
    </insert>
    <select id="selectByName" resultMap="TracksMap">
        select * from `tracks`
        where
            name like CONCAT('%',#{name},'%')
        order by popularity desc
        limit 6
    </select>

    <insert id="deleteTracks" parameterType="String">
        DELETE FROM tracks WHERE id = #{id}
    </insert>


</mapper>